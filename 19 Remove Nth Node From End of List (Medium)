# Definition for singly-linked list.
# class ListNode(object):
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution(object):
    def removeNthFromEnd(self, head, n):
        """
        :type head: ListNode
        :type n: int
        :rtype: ListNode
        """
        num = 0
        temp = head
        while temp:
            num += 1
            temp=temp.next
        if num == 1:
            return None
        elif num == 2 and n == 1:
            head.next = None
            return head
        elif n == num:
            return head.next
        temp = head
        for i in range(num-n-1):
            temp=temp.next
        temp.next = temp.next.next
        return head
